generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Note {
  id         String   @id @default(uuid())
  title      String
  content    String
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
  tags       Tag[]
}

model Tag {
  id    String @id @default(uuid())
  name  String @unique
  notes Note[]
}
